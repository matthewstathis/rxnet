<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Rx Telephone Order Pad</title>
  <script src="https://unpkg.com/pdf-lib@1.17.1/dist/pdf-lib.min.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    form {
      max-width: 600px;
      margin: auto;
    }
    label {
      display: block;
      margin-top: 10px;
      font-weight: bold;
    }
    input, textarea {
      width: 100%;
      padding: 8px;
      margin-top: 4px;
      box-sizing: border-box;
    }
    button {
      margin-top: 20px;
      padding: 10px 20px;
      background: #148275;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
    button:hover {
      background: #0f5d4f;
    }
  </style>
</head>
<body>
  <h2>Rx Telephone Order Entry</h2>
  <form id="rxForm">
    <label>Patient Name: <input type="text" id="patientName"></label>
    <label>DOB: <input type="text" id="dob"></label>
    <label>Prescriber: <input type="text" id="prescriber"></label>
    <label>Drug: <input type="text" id="drug"></label>
    <label>Sig: <textarea id="sig"></textarea></label>
    <label>Refills: <input type="text" id="refills"></label>
    <button type="submit">Generate & Print</button>
  </form>

  <script>
    document.getElementById("rxForm").addEventListener("submit", async function(e) {
      e.preventDefault();

      // Load existing PDF
      const formPdfBytes = await fetch("rxtelephonev2.pdf").then(res => res.arrayBuffer());
      const pdfDoc = await PDFLib.PDFDocument.load(formPdfBytes);

      const pages = pdfDoc.getPages();
      const firstPage = pages[0];
      const { height } = firstPage.getSize();

      // Grab form values
      const patientName = document.getElementById("patientName").value;
      const dob = document.getElementById("dob").value;
      const prescriber = document.getElementById("prescriber").value;
      const drug = document.getElementById("drug").value;
      const sig = document.getElementById("sig").value;
      const refills = document.getElementById("refills").value;

      // Draw text onto PDF at coordinates (adjust these to match your PDF layout)
      firstPage.drawText(patientName, { x: 100, y: height - 100, size: 12 });
      firstPage.drawText(dob,         { x: 100, y: height - 130, size: 12 });
      firstPage.drawText(prescriber,  { x: 100, y: height - 160, size: 12 });
      firstPage.drawText(drug,        { x: 100, y: height - 190, size: 12 });
      firstPage.drawText(sig,         { x: 100, y: height - 220, size: 12 });
      firstPage.drawText(refills,     { x: 100, y: height - 250, size: 12 });

      // Save new PDF
      const pdfBytes = await pdfDoc.save();

      // Open in a new tab for printing
      const blob = new Blob([pdfBytes], { type: "application/pdf" });
      const url = URL.createObjectURL(blob);
      const newWindow = window.open(url);
      newWindow.onload = () => newWindow.print();
    });
  </script>
</body>
</html>